<html>
	<head>
		<title>Blog App</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.css">
		<link rel="stylesheet" href="/stylesheets/style.css">
	</head>
	<body>

		<div class="ui fixed inverted menu">
				<div class="ui container">
					<div class="header item"><i class="comments icon"></i>Blog Site</div>
					<a href="/" class="item">Home</a>
					<a href="/blogs/new" class="item">New Post</a>
	      <a href="/logout"class="item" style="justify-content:flex-end">Logout!</a>
				</div>
		</div>






<div class="ui main text container">
	<div class="ui huge header">
		RESTful Blog App
	</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blogs.forEach(function(blog){ %>
				<div class="item">
					<div class="image">
						<img src="<%= blog.image %>"></img>
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title%></a>
						<div class="meta">
							<span><%= blog.created.toDateString() %></span>
						</div>
						<div class="description">
							<p><%- blog.body.substring(0,101) %>...</p>
						</div>
						<div class="extra">
							<a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
								Read More
								<i class="right chevron icon"></i>
							</a>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</div>

<% include ./partials/footer %>
